@model FlightsManager.Models.Web.Employees.LoginEmployeeViewModel
@{
    ViewData["Title"] = "Login";
    string incorrectLoginMsg = ViewData["incorrectCredentials"] as string;
}
<h1 class="text-left text-info title">@ViewData["Title"]</h1>
@{ 
    if (incorrectLoginMsg != null && incorrectLoginMsg != "" && incorrectLoginMsg.Length > 0)
    {
        <p>@incorrectLoginMsg</p>
    }
}
<form method="post" asp-action="Login" class="container container-fluid form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Username" class="form-control required-fields" placeholder="Username" type="text" />
        <span class="text-danger required-fields-symbol">*</span><br />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control required-fields" placeholder="Password" type="password" />
        <span class="text-danger required-fields-symbol">*</span><br />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
        <a type="button" name="signUpBtn" class="btn btn-light" asp-area="" asp-controller="Employee" asp-action="SignUpForm">Sign Up</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}