@model FlightsManager.Models.Data.Reservation
@{
    bool isLoggedIn = (bool)ViewData["isLoggedIn"];
    string unm = (string)ViewData["username"];
    if (isLoggedIn)
    {
        <p>Welcome, @unm!</p>
        <a type="button" asp-area="" asp-controller="Employee" asp-action="LogOut">LogOut</a>
        <p><a asp-controller="Reservation" asp-action="ReservationDateSortedIndex">Sort By Reservation Date</a></p>
    }
    else
    {
        <a asp-controller="Reservation" asp-action="ReservationDateSortedIndex">Sort By Reservation Date</a>
    }

    string rId = ViewData["_resId"] as string;
    string rDate = ViewData["_resDate"] as string;
    string lf = ViewData["_locFrom"] as string;
    string lt = ViewData["_locTo"] as string;
    string d1 = ViewData["_takeOffD"] as string;
    string d2 = ViewData["_landingD"] as string;
    string dur = ViewData["_duration"] as string;
    string plT = ViewData["_plType"] as string;
    string upn = ViewData["_upn"] as string;
    string pilot = ViewData["_pilot"] as string;
    string fnm = ViewData["_fnm"] as string;
    string snm = ViewData["_snm"] as string;
    string lnm = ViewData["_lnm"] as string;
    string egn = ViewData["_egn"] as string;
    string nat = ViewData["_nat"] as string;
    string phNum = ViewData["_phNum"] as string;
    //string mail = ViewData["_mail"] as string;
    string tickT = ViewData["_tickType"] as string;
    string pr = ViewData["_tickPr"] as string;
    string cnt = ViewData["_tickCnt"] as string;
    string totPr = ViewData["_totalPr"] as string;
}
